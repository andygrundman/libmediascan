#!/bin/sh
./configure --extra-libs='-lpthread' --extra-cflags="-I/usr/local/include -U__STRICT_ANSI__ -D_MT -mno-cygwin -mms-bitfields" --extra-ldflags="-add-stdcall-alias -L/usr/local/lib" --enable-w32threads --enable-memalign-hack --disable-ffserver --disable-ffplay --target-os=mingw32 --enable-shared --enable-static --enable-runtime-cpudetect --arch=x86 --enable-gpl --enable-version3 --enable-libfaac --enable-libgsm --enable-libmp3lame --enable-libxvid --enable-nonfree