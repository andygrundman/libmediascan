# ============================================================================
# Activated features
# ============================================================================

FEATURES=

# ============================================================================
# Architecture dependant things
# ============================================================================

ARCHITECTURE=-DARCH_IS_IA32
BUS=-DARCH_IS_32BIT
ENDIANNESS=-DARCH_IS_LITTLE_ENDIAN
SHARED_EXTENSION=dll
STATIC_EXTENSION=a
OBJECT_EXTENSION=obj

# ============================================================================
# Compiler
# ============================================================================

CC=gcc
SPECIFIC_CFLAGS=-mno-cygwin -DHAVE_PTHREAD 
ALTIVEC_CFLAGS=
CFLAGS=-Wall -O2 -fstrength-reduce -finline-functions -ffast-math -fomit-frame-pointer

# ============================================================================
# Assembler
# ============================================================================

AS=yasm
AFLAGS=-I$(<D)/ -I../../src/ -f win32 -DWINDOWS 
ASSEMBLY_EXTENSION=asm

# ============================================================================
# Linker
# ============================================================================

SPECIFIC_LDFLAGS=-mno-cygwin -shared -Wl,--dll,--out-implib,$@.a libxvidcore.def -lpthread 
API_MAJOR=4
API_MINOR=3
RANLIB=ranlib
AR=ar

# ============================================================================
# Installation
# ============================================================================

INSTALL=/bin/install -c
DESTDIR=
prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

# ============================================================================
# Sources
# ============================================================================

GENERIC_SOURCES=$(SRC_GENERIC)
ASSEMBLY_SOURCES=$(SRC_IA32)
DCT_IA64_SOURCES=$()
PPC_ALTIVEC_SOURCES=$()
GENERIC_OBJECTS=$(SRC_GENERIC:.c=.obj)
ASSEMBLY_OBJECTS=$(SRC_IA32:.asm=.obj)
DCT_IA64_OBJECTS=$(:.asm=.obj)
PPC_ALTIVEC_OBJECTS=$(:.c=.obj)

STATIC_LIB=xvidcore.$(STATIC_EXTENSION)
SHARED_LIB=xvidcore.$(SHARED_EXTENSION)
PRE_SHARED_LIB=xvidcore.$(SHARED_EXTENSION)
